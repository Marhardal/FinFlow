@model FinFlow.Models.ItemsModel

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@* <h1>Edit</h1> *@

<h4>Edit Item</h4>
<hr />
<div class="row">
    <div class="col-md-12">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group my-3">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group my-3">
                <label asp-for="SelectedCategoryId" class="control-label"></label>
                <select asp-for="SelectedCategoryId" class="form-control">
                    @foreach (var item in ViewBag.Categories as List<CategoryModel>)
                    {
                        @* if (item.Id == ViewBag.SelectedCategoryId)
                        {
                            <option value="@item.Id" selected>@item.Name</option>
                        }
                        else
                        { *@
                            <option value="@item.Id">@item.Name</option>
                        @* } *@
                    }
                </select>
                <span asp-validation-for="SelectedCategoryId" class="text-danger"></span>
            </div>
            <div class="form-group my-3">
                <label asp-for="Measurement" class="control-label"></label>
                <input asp-for="Measurement" class="form-control" />
                <span asp-validation-for="Measurement" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <div class="col-2">
                    <input type="submit" value="Save" class="btn btn-primary" />
                </div>
                <div class="col-2">
                    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
                </div>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
